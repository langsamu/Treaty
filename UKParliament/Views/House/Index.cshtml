@model UKParliament.Model.UKParliamentDynamicGraph
@{
    ViewData["Title"] = @Localizer["Title"];
}

<div class="section--primary">
    <div class="container">
        <small><a asp-controller="Home" asp-action="Index">@Localizer["Category"]</a></small>
        <h1><span>@Localizer["Title"]</span></h1>
        <p>@Localizer["Abstract"]</p>
    </div>
</div>

<section id="content">
    <div class="container">
        <ol class="list--block list--3 ">
            @foreach (var house in Model.HouseCollection.OrderBy(x => x.HouseName.Single()))
            {
                <li>
                    <div class="card">
                        <div class="card__details">
                            <h3><a asp-controller="House" asp-action="Item" asp-route-id="@house.Id">@house.HouseName.Single()</a></h3>
                        </div>
                    </div>
                </li>
            }
        </ol>
    </div>
</section>
